[Unit]
Description=Runs Crowdsec to CF KV store sync every 3rd hour

[Timer]
# Run every 3rd hour starting at 01:00
OnCalendar=*-*-* 01/3:00:00
# If the server was off, run immediately on boot
Persistent=true
# Spread the start time randomly over 15 mins to avoid spikes
RandomizedDelaySec=15m

[Install]
WantedBy=timers.target